@using System.Diagnostics.Eventing.Reader
@model IEnumerable<HW6Project.Models.Artist>


<div class="container">


    <hr />
    <h1 class="text-white text-xl-center">Search for your favorite artist!</h1>
    <hr />
    

    <form asp-action="ArtistSearch" method="get" class="bg-white">
        <div class="form-group row">
            <div class="col-lg-10">
                 <input type="text" class="form-control"  placeholder="Find Artists by name:" name="searchQuery" value="@ViewData["CurrentFilter"]" />
            </div>
            <div class="col-lg-2">
                <input type="submit" value="Search Now" class="btn btn-default" />
            </div>
                
                
            
        </div>
    </form>


    @if (Model != null)
    {
        <hr />

        <div class="row">

            <div class="col-6">

                <table class="table bg-white">
                    <thead>
                    <tr><th>Name</th></tr>
                    </thead>
                    <tbody>
                    @foreach (HW6Project.Models.Artist i in Model)
                    {
                        <tr>
                            @*<td>@i.Name</td>*@
                            <td><a asp-controller="Music" asp-action="AlbumGenerator" asp-route-artistId="@i.ArtistId" >@i.Name</a></td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>

        </div>


    }
    else
    {
        <hr />
        <h3 class="text-white text-xl-center">Please enter a at least two characters when searching.</h3>
    }

</div>